
<%= form_for @post do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <br>
  <br>

  <%= f.label :body %>
  <%= f.text_field :body %>

  <br>
  <br>


  <%= f.label :category_id %>
  <%= f.collection_select :category_id, Category.order(:name), :id, :name, { include_blank: true } %>

  <br>
  <br>

  <%= f.submit 'Сохранить' %>

<% end %>