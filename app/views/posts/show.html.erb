<h1>show</h1>

<h4><%= @post.title %></h4>
<p><%= @post.body %></p>
<% if @post.category.name. present? %>
  <%= link_to @post.category.name, @post.category %>
<% end %>
|
<small><%= link_to 'Редактировать', edit_post_path(@post) %></small>
|
<small><%= link_to 'Удалить', post_path(@post), method: :delete %></small>

<hr>
<section style="border: 2px solid darkred">
  <h3>комментарии</h3>
  <div>
    <%= render 'comments/form' %> <!-- паршал- для формы -->
    <hr>
    <h4><%= @post.comments.count %> Комминтарии</h4>
    <%= render @post.comments %> <!-- паршал- для всех коментов  -->

  </div>
</section>
