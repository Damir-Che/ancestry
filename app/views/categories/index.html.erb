<h1>index-Category</h1>

<div class="buttons_panel">
  <%= link_to 'Новая категория', new_category_path %>
</div>

<section>
  <table>
    <thead>
    <tr>
      <th>#</th>
      <th>Название</th>
      <th>Категория родитель</th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    <% @categories.each_with_index do |category, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= category.name %></td>
        <td><%= category.parent.name if category.parent.present? %></td>
        <td>
          <%= link_to 'Изменить', edit_category_path(category) %>
          <%= link_to 'Удалить', category_path(category), method: :delete, data: { confirm: 'Вы уверены?' } %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</section>